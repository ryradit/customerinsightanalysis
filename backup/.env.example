# Environment variables for AI Copilot Consumer Insights
# Copy this file to .env and fill in your actual values

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Application Settings
APP_NAME=AI Copilot Consumer Insights
DEBUG=True
HOST=127.0.0.1
PORT=8000

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=xlsx,xls
UPLOAD_FOLDER=uploads

# AI Model Settings
DEFAULT_AI_MODEL=gemini  # or openai
MAX_TOKENS=1000
TEMPERATURE=0.7

# Topic Classification Categories
TOPIC_CATEGORIES=price,taste,packaging,product_quality,customer_service

# Sentiment Analysis Labels
SENTIMENT_LABELS=positive,neutral,negative